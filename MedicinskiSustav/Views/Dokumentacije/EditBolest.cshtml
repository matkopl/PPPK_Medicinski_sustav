@model MedicinskiSustav.Viewmodels.BolestVM

<h2>Uredi bolest</h2>

<form asp-action="EditBolest">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DokumentacijaId" />
    <div class="form-group">
        <label asp-for="Naziv" class="control-label"></label>
        <input asp-for="Naziv" class="form-control" />
        <span asp-validation-for="Naziv" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pocetak" class="control-label"></label>
        <input asp-for="Pocetak" type="date" class="form-control" />
        <span asp-validation-for="Pocetak" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Zavrsetak" class="control-label"></label>
        <input asp-for="Zavrsetak" type="date" class="form-control" />
        <span asp-validation-for="Zavrsetak" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i> Spremi promjene
    </button>
    <a asp-action="Details" asp-route-id="@Model.DokumentacijaId" class="btn btn-secondary">Odustani</a>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
