@model IEnumerable<MedicinskiSustav.Viewmodels.PregledVM>

<h2>Popis pregleda</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Pacijent</th>
            <th>Šifra pregleda</th>
            <th>Vrijeme pregleda</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PacijentImePrezime</td>
                <td>@item.SifraPregleda</td>
                <td>@item.VrijemePregleda.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <i class="fas fa-info-circle"></i> Detalji
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Uredi
                    </a>
                    <form asp-action="Delete" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@item.Id" />
                        @Html.AntiForgeryToken()
                        <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete(this)">
                            <i class="fas fa-trash"></i> Obriši
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
