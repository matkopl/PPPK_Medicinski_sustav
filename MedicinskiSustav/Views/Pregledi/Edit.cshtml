@model MedicinskiSustav.Viewmodels.PregledEditVM

<h2>Uredi pregled</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="PacijentId" />

    <div class="form-group mb-3">
        <label asp-for="SifraPregleda" class="form-label"></label>
        <select asp-for="SifraPregleda" asp-items="Html.GetEnumSelectList<SifraPregleda>()" class="form-select"></select>
        <span asp-validation-for="SifraPregleda" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="VrijemePregleda" class="form-label"></label>
        <input asp-for="VrijemePregleda" class="form-control" />
        <span asp-validation-for="VrijemePregleda" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i> Spremi promjene
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Natrag
    </a>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
