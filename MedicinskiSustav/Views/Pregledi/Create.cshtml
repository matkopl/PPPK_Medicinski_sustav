@model MedicinskiSustav.Viewmodels.PregledCreateVM

<h2>Novi pregled</h2>

<form asp-action="Create">
    <input type="hidden" asp-for="PacijentId" />

    <div class="form-group mb-3">
        <label asp-for="SifraPregleda"></label>
        <select asp-for="SifraPregleda"
                asp-items="Html.GetEnumSelectList<SifraPregleda>()"
                class="form-select">
            <option value="">Odaberite šifru</option>
        </select>
        <span asp-validation-for="SifraPregleda" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="VrijemePregleda"></label>
        <input asp-for="VrijemePregleda" type="datetime-local" value="@(Model.VrijemePregleda.ToString("yyyy-MM-ddTHH:mm"))" class="form-control" />
        <span asp-validation-for="VrijemePregleda" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i> Kreiraj pregled
    </button>
</form>
