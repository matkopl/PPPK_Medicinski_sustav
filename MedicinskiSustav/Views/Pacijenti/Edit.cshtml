@model MedicinskiSustav.Viewmodels.PacijentEditVM

<h2>Uredi pacijenta</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="OIB" class="control-label"></label>
        <input asp-for="OIB" class="form-control" />
        <span asp-validation-for="OIB" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ime" class="control-label"></label>
        <input asp-for="Ime" class="form-control" />
        <span asp-validation-for="Ime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prezime" class="control-label"></label>
        <input asp-for="Prezime" class="form-control" />
        <span asp-validation-for="Prezime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DatumRodjenja" class="control-label"></label>
        <input asp-for="DatumRodjenja" type="date" class="form-control" />
        <span asp-validation-for="DatumRodjenja" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Spol" class="control-label"></label>
        <select asp-for="Spol" asp-items="ViewBag.SpolList" class="form-control">
            <option value="">Odaberite spol</option>
        </select>
        <span asp-validation-for="Spol" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Spremi promjene</button>
</form>

@section Scripts {
    <script>
        document.getElementById('editForm').addEventListener('submit', function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Spremi promjene?',
                text: "Jeste li sigurni da želite ažurirati podatke o pacijentu?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Da, spremi!',
                cancelButtonText: 'Odustani'
            }).then((result) => {
                if (result.isConfirmed) {
                    this.submit();
                }
            });
        });
    </script>
}